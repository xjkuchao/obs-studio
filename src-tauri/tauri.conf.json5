{
    productName: 'obs-studio',
    version: '0.1.0',
    identifier: 'com.tyler.obs-studio',
    build: {
        beforeDevCommand: 'bun run dev',
        devUrl: 'http://localhost:1420',
        beforeBuildCommand: 'bun run build',
        frontendDist: '../dist',
    },
    app: {
        windows: [
            {
                title: 'obs-studio',
                width: 1086,
                height: 729,
                skipTaskbar: false,
                theme: 'Dark',
            },
        ],
        trayIcon: {
            iconPath: 'icons/obs-studio.ico',
            iconAsTemplate: true,
        },
        security: {
            csp: null,
        },
    },
    bundle: {
        active: true,
        targets: 'all',
        icon: [
            // "icons/32x32.png",
            // "icons/128x128.png",
            // "icons/128x128@2x.png",
            // "icons/icon.icns",
            'icons/obs-studio.ico',
        ],
        resources: [
            'resources/*'
        ],
    },
}
